<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Idyllic" parent="Theme.Material3.DayNight.NoActionBar">
        <!--    <style name="Theme.Idyllic" parent="Theme.Material3.DayNight.NoActionBar">-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="background">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="materialCardViewStyle">@style/CustomCardViewStyle</item>
    </style>

    <style name="CustomCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="ToolbarShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/dp_8</item>
        <item name="cornerSizeBottomRight">@dimen/dp_8</item>
    </style>
</resources>